# Test environment configuration
# Copy to tests/.env and fill in your values:
#   cp tests/.env.example tests/.env

# Device IPs
BEDROOM_IP=10.0.0.x
INTERCOM2_IP=10.0.0.x
HUB_IP=10.0.0.x
HUB_PORT=8099

# MQTT broker
MQTT_HOST=10.0.0.x
MQTT_PORT=1883
MQTT_USER=your_mqtt_user
MQTT_PASS=your_mqtt_password

# Device unique IDs (from HA MQTT auto-discovery)
BEDROOM_UNIQUE_ID=intercom_xxxxxxxx
INTERCOM2_UNIQUE_ID=intercom_xxxxxxxx
HUB_UNIQUE_ID=intercom_xxxxxxxx

# Device IDs (8-byte hex from ESP32 MAC)
BEDROOM_DEVICE_ID=xxxxxxxxxxxxxxxx
INTERCOM2_DEVICE_ID=xxxxxxxxxxxxxxxx

# ESP32 HTTP auth
DEVICE_USER=admin
DEVICE_PASS=your_device_password

# Serial ports (optional, defaults shown)
BEDROOM_SERIAL=/dev/ttyACM0
INTERCOM2_SERIAL=/dev/ttyACM1
